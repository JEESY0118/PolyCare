<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_homepage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/ic_home_black_24dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/acueil"
            android:textColor="@drawable/homepage_txt" />

        <TextView
            android:id="@+id/txt_graphe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/ic_insert_chart_black_24dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/graph"
            android:textColor="@drawable/graphe_txt" />

        <TextView
            android:id="@+id/txt_map"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/ic_location_on_black_24dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/map"
            android:textColor="@drawable/map_txt" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_menu"
        android:background="#F1F1F1">

    </FrameLayout>

</RelativeLayout>